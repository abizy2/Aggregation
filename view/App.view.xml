<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	headerText="{i18n>invoiceListTitle}"
	class="sapUiResponsiveMargin"
	displayBlock="true">
	<Shell>
		<App class="myAppDemoWT">
			<pages>
				<Page title="{i18n>Сборка компьютера}">
					<content>
					<Table id="idTable" items="{/Invoices}">
							<columns>
								<Column>
									<Text text="ProductName"/>
								</Column>
								<Column>
									<Text text="Quantity"/>
								</Column>
								<Column>
									<Text text="ExtendedPrice"/>
								</Column>
								<Column>
									<Text text="ShipperName"/>
								</Column>
								<Column>
									<Text text="ShippedDate"/>
								</Column>
								<Column>
									<Text text="Photo"/>
								</Column>
							</columns>
								<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ProductName}"></Text>
												<Text text="{Quantity}"></Text>
												<Text text="{ExtendedPrice}"></Text>
												<Text text="{ShipperName}"></Text>
												<Text text="{ProductName}"></Text>
												<Image src="{Photo}" width="80px" height="90px"/>
											</cells>
										</ColumnListItem>
								</items>
							</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
